{
  "compilerOptions": {
    "baseUrl": "src/",
    "types": ["node", "jest"],
    "target": "es5",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "./",
    "outDir": "./build",
    "strict": true,
    "allowJs": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "lib": [
      "esnext"
    ],
    "downlevelIteration": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ],
   "typeRoots": [
      "node_modules/@types"
  ]
}
